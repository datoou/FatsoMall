.navbar{
  border-bottom: 1px solid #ccc;
  position: relative;
}
.navbar .title{
  position: absolute;
  width: 750rpx;
  text-align: center;
  left: 0;
  bottom: 20rpx;
  font-size: 30rpx;
  color: #fff;
}
.navbar .bg{
  width: 750rpx;
}
.container{
  width: 750rpx;
  position: fixed;
  left: 0;
  bottom: 100rpx;
  z-index: 100rpx;
}

.swiper{
  width:  750rpx;
  height: 280rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

swiper{
  width:  700rpx;
  height: 280rpx;
  border-radius: 30rpx;
}
.swiper image{
  width:  700rpx;
  height: 280rpx;
  border-radius: 30rpx;
}
.iconlist{
  margin-top: 10rpx;
  background-color: #fff;
}
.grid-item{
  padding: 40rpx 0 0 !important;
}
.tuijian{
  width: 750rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  position: relative;
  background-image: #fff;
}
.tuijian image{
  height: 80rpx;
  padding: 20rpx;
}
.product image{
  width: 360rpx;
  height: 360rpx;
}
.product .title{
  display: flex;
  height: 80rpx;
  align-items: center;
  font-size: 30rpx;
  white-space: nowrap;
}
.product .title image{
  width: 80rpx;
  height: 40rpx;
}
.product .title text{
  width: 270rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-left: 10rpx;
}


