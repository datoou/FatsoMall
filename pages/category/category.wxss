.navbar{
  border-bottom: 1px solid #fff;
  position: relative;
}
.navbar .title{
  position: absolute;
  width: 750rpx;
  text-align: center;
  left: 0;
  bottom: 20rpx;
  font-size: 30rpx;
  color: #000;
}
.navbar .bg{
  width: 750rpx;
}
.container{
  width: 750rpx;
  position: fixed;
  left: 0;
  bottom: 100rpx;
  z-index: 100rpx;
}

.cateContent{
  width:570rpx ;
}

.product image{
  width: 200rpx;
  height: 200rpx;
}
.product .title,.product .title text{
  width: 200rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-left: 10rpx;
  white-space: nowrap;
}