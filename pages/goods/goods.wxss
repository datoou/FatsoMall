.navbar{
  border-bottom: 1px solid #fff;
  position: relative;
}
.navbar .title{
  position: absolute;
  width: 750rpx;
  text-align: center;
  left: 0;
  bottom: 20rpx;
  font-size: 30rpx;
  color: #000;
}
.navbar image{
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 100;
}
.navbar .bg{
  width: 750rpx;
}
.container{
  width: 750rpx;
  position: fixed;
  left: 0;
  bottom: 100rpx;
  z-index: 100rpx;
}

.cateContent{
  width:570rpx ;
}

.product image{
  width: 200rpx;
  height: 200rpx;
}
.product .title,.product .title text{
  width: 200rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-left: 10rpx;
  white-space: nowrap;
}
.swiper,swiper,.swiper image{
  width: 750rpx;
  height: 600rpx;
}

.service-policy{
  width: 750rpx;
  height: 73rpx;
  background-color: #f4f4f4;
  padding: 0 31rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  font-size: 24rpx;
}

.service-policy .item {
  background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/servicePolicyRed-518d32d74b.png) 0 center no-repeat;
  background-size: 10rpx;
  padding-left: 15rpx;
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: #666;
}

.pheader{
  width: 750rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.pheader .himg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 0 20rpx;
}

.comment{
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #ccc;
}